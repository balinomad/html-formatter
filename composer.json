{
    "name": "balinomad/html-formatter",
    "type": "library",
    "description": "HTML beautifier and minifier library for development and testing.",
    "homepage": "https://github.com/balinomad/html-formatter",
    "keywords": [
        "beautify",
        "format",
        "HTML",
        "indent",
        "minify",
        "PHP"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Miklos Karpati",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "ext-mbstring": "*",
        "balinomad/simple-config": "^0.2.0"
    },
    "require-dev": {
        "larapack/dd": "^1.1",
        "phpstan/phpstan": "^0.12.99",
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "BaliNomad\\HtmlFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BaliNomad\\HtmlFormatter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": "phpstan analyse",
        "test": "phpunit",
        "testonly": "phpunit --filter"
    },
    "scripts-descriptions": {
        "check": "Run static analysis",
        "test": "Run unit tests",
        "testonly": "Run a single test"
    }
}
